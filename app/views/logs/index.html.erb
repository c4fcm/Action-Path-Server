<p id="notice"><%= notice %></p>

<h1>Listing Logs</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Issue</th>
      <th>Action</th>
      <th>Timestamp</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Install</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.user_id %></td>
        <td><%= log.issue_id %></td>
        <td><%= log.action %></td>
        <td><%= log.timestamp %></td>
        <td><%= log.lat %></td>
        <td><%= log.lng %></td>
        <td><%= log.install_id %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

