<p id="notice"><%= notice %></p>

<h1>Listing Responses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Install</th>
      <th>Issue</th>
      <th>Answer</th>
      <th>Timestamp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= response.install_id %></td>
        <td><%= response.issue_id %></td>
        <td><%= response.answer %></td>
        <td><%= response.timestamp %></td>
        <td><%= link_to 'Show', response %></td>
        <td><%= link_to 'Edit', edit_response_path(response) %></td>
        <td><%= link_to 'Destroy', response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

